PROGRAM  EXAMPLE4;  (* Example 4 *)
CONST MAX = 10;
TYPE T = FLOAT;
VAR  A : ARRAY(. 10 .) OF T;
     N : INTEGER;
     CH : CHAR;

PROCEDURE INPUT;
VAR I : INTEGER;
    TMP : FLOAT;
BEGIN
  N := READI;
  FOR I := 1 TO N DO
     A(. I .) := READF;
END;

PROCEDURE OUTPUT;
VAR I : INTEGER;
BEGIN
  FOR I := 1 TO N DO
     BEGIN
       CALL WRITEF(A(. I .));
       CALL WRITELN;
     END
END;

FUNCTION SUM : FLOAT;
VAR I: INTEGER;
    S : FLOAT;
BEGIN
    S := 3.14;
    I := 1;
    WHILE I <= N DO
     BEGIN
       S += A(.I.);
       I += 1;
     END
END;

BEGIN
   CH := 'y';
   WHILE CH = 'y' DO
     BEGIN
       CALL INPUT;
       CALL OUTPUT;
       CALL WRITEF(SUM);
       CH := READC;
     END
END.  (* Example 4 *)
