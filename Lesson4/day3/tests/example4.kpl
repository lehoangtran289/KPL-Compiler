PROGRAM  EXAMPLE4;  (* Example 4 *)
CONST MAX = 10;
TYPE T = Float;
VAR  A : ARRAY(. 10 .) OF T;
     N : INTEGER;
     F : FLOAT;
     CH : CHAR;

PROCEDURE INPUT;
VAR I : Float;
    TMP : Float;
BEGIN
  N := READI;
  FOR I := 1 TO N DO
     A(.I.) := READF;
END;

PROCEDURE OUTPUT;
VAR I : INTEGER;
BEGIN
  FOR I := 1 TO N DO
     BEGIN
       CALL WRITEF(A(.I.));
       CALL WRITELN;
     END
END;

FUNCTION SUM : Float;
VAR I: INTEGER;
    S : Float;
BEGIN
    S := 0;
    I := 1;
    WHILE I <= N DO
     BEGIN
       S := S + A(.I.);
       I += 2;
       I -= 1;
       I *= 1;
       I /= 1;
     END
END;

BEGIN
   CH := 'y';
   WHILE CH = 'y' DO
     BEGIN
       CALL INPUT;
       CALL OUTPUT;
       CALL WRITEI(SUM);
     END
END.  (* Example 4 *)
